<html>
    <head>
        <script src="https://kit.fontawesome.com/6eb0c005c0.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        
            <h1 id="page-heading"
            ><i class="fas fa-address-book"></i>&emsp;My Contact List
        </h1>
        <div id="contact-list-container">

        </div>
            <ul>
            <% for( let i of contact_list ){ %>
                <li class="contact">
                    <div class="details">
                        <p><%= i.name %></p>
                        <p><%= i.number %></p>
                    </div>
                    <div class="delete-button">
                        <a href="/delete-contact/?id=<%= i._id %>">
                            <i class="fas fa-window-close"></i>
                        </a>
                    </div>
                </li>
                
            <% } %>
            </ul>
            <form action= "/create-contact"method="POST">
                <input type="text" name = "name" placeholder="name" required>
                <input type="number" name = "number" placeholder="number" required>
                <button type="submit">Add contaact</button>
            </form>
        <!-- <br>Rendered from ejs view -->
    </body>
</html>